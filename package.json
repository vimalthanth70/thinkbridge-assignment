{
  "name": "thinkbridge",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web-build": "cd ./apps/web && npm run build",
    "server-build": "cd ./apps/server && npm run build",
    "validation-build":"cd ./packages/validations && npm run build",
    "web-start":"cd ./apps/web && npm run preview",
    "server-start":"cd ./apps/server && npm run start",
    "start:all": "concurrently \"npm run web-start\" \"npm run server-start\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.6",
    "react-redux": "^9.1.2",
    "zod": "^3.23.8"
  }
}
